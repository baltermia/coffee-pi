@inherits LayoutComponentBase

<MudThemeProvider Theme=theme @bind-bind-IsDarkMode=darkmode />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent>
        @Body
    </MudMainContent>

    <MudAppBar Bottom Fixed Elevation=1 Color=Color.Dark>
        <MudNavLink Href="">
            <MudIconButton Icon=@Icons.Material.Outlined.Create Color=Color.Primary />
        </MudNavLink>

        <MudNavLink Href="List">
            <MudIconButton Icon=@Icons.Filled.FormatListBulleted Color=Color.Primary />
        </MudNavLink>

        <MudNavLink Href="Stats">
            <MudIconButton Icon=@Icons.Filled.QueryStats Color=Color.Primary />
        </MudNavLink>

        <MudToggleIconButton @bind-Toggled=darkmode
                             Title="Dark"
                             Icon=@Icons.Material.Outlined.DarkMode
                             ToggledTitle="Light"
                             ToggledIcon=@Icons.Material.Outlined.LightMode />
    </MudAppBar>
</MudLayout>

@code {
    private MudTheme theme = new();
    private bool darkmode = true;
}